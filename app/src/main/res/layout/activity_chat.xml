<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Header -->
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi Kami"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="@android:color/white" />

        <!-- Informasi dan Tombol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/infoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anda butuh bantuan?\nHubungi customer service kami"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="start"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/liveChatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Chat"
                android:padding="8dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Tab Navigasi -->
        <TextView
            android:id="@+id/chatOrderTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat Order"
            android:padding="12dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:textSize="16sp" />

        <!-- Konten Chat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anda belum memiliki chat dengan mitra kami."
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan melakukan order"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>